//Fonts
@font-face
	font-family sanspro
	src url(../fonts/SourceSansPro-Regular.ttf) format('truetype')

@font-face
	font-family lobster
	src url(../fonts/Lobster-Regular.ttf) format('truetype')

@font-face
	font-family lato
	src url(../fonts/Lato-Regular.ttf) format('truetype')
	
//Shadows
shadow1 = 0 1px 3px rgba(grey900,0.30), 0 1px 2px rgba(grey900,0.22)
shadow2 = 0 3px 6px rgba(grey900,0.16), 0 3px 6px rgba(grey900,0.23)
shadow3 = 0 10px 20px rgba(grey900,0.19), 0 6px 6px rgba(grey900,0.23)
shadow4 = 0 14px 28px rgba(grey900,0.25), 0 10px 10px rgba(grey900,0.22)
shadow5 = 0 19px 38px rgba(grey900,0.30), 0 15px 12px rgba(grey900,0.22)

//footer
footer
	width 100%
	bottom 0
	position fixed
	text-align center
	padding 1em
	font-family lobster
	img
		border-radius 50%
		box-shadow shadow1

//header
header
	background transparent
	width 100%
	padding 0 0 1em 0
	
.cMenu
	li
		&:hover .submenu
			max-height 200px

.cMenu
	nav
		margin 0 auto
		padding 0 auto
		ul
			li
				display inline-block
				line-height 1.5
				margin none
				width 4%
				.submenu
					background grey900
					box-shadow shadow4
					color white
					position absolute
					width 155px
					text-align center
					border-radius 2px
					margin-top 8px
					left -50%
					max-height 0px
					overflow hidden
					transition max-height 0.4s linear
					z-index 10
					text-align center
					li
						width 100%
						text-align center
						display block
						padding-top .5em
						padding-bottom .5em
						border-top 1px solid grey800
				img
					box-shadow shadow1
					width 48px
					height 48px
					border-radius 50%
					transition all 0.2s linear
					&:hover,&:active, &:focus
						box-shadow shadow4
					&:hover ~ .submenu
						max-height 200px
				.logo
					text-shadow shadow1
				&:nth-child(1)
					text-align left
					width 40%

//body
html, body
	background -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%, rgba(teal600,1)), color-stop(5%, rgba(teal600,1)), color-stop(100%, rgba(teal900,1)))
	background -webkit-radial-gradient(center, ellipse cover, rgba(teal600,1) 0%, rgba(teal600,1) 5%, rgba(teal900,1) 100%)
	font-family sanspro
	font-size 14px
	height 100%
	margin 0px
	padding 0px

//PreloadPage
.loading
	position relative
	margin 0 auto
	z-index 2
	text-align center
	color white
	font-family sanspro
	

.loading-msg
	border 1px solid white
	border-radius 50%
	font-family lobster !important
	font-size 3em
	height 100px
	line-height 2.3em
	margin 0 auto
	margin-top 8%
	margin-bottom .3em
	width 100px
	z-index 3
	-webkit-animation logoAnimation 2.5s

.loading-mask
	// background rgba(grey900,.7)
	background grey900
	width 100%
	height 100%
	position fixed
	top 0
	left 0
	z-index 1
	
//log-in
.login
	display inline-block
	float right
	background white
	color grey800
	height 100%
	width 25%
	text-align center
	z-index 0
	text-shadow textshadow1
	box-shadow shadow5
	position relative

.contenedor-login
	position absolute
	top 20%
	margin-left auto
	margin-right auto
	left 0
	right 0
	
//Commons
.btn
	position relative
	border-radius 2px
	padding 10px 20px 10px 20px
	border none
	transition all .2s ease-in-out
	overflow hidden
	&:hover
		box-shadow shadow1

.btn-small
	width 40%
.btn-mediun
	width 80%
.btn-large
	width 100%
	
.button-error
	background red400
	color rgba(white,0.8)
	&:hover
		color rgba(white,1)
.button-warning
	background amber200
	color rgba(grey900,0.8)
	&:hover
		color rgba(grey900,1)
.button-normal
	background rgba(grey100,1)
	color rgba(grey900,0.8)
	&:hover
		color rgba(grey900,1)
		
.control-button
	button
		span
			position relative
			z-index 3
			small
				background transparent
				width 20px
				height 20px
				border-radius 50%
				position absolute
				margin-left auto
				margin-right auto
				left 0
				right 0
				transition all 0.4s linear
				transform scale(0)
				z-index 1
		&:active,
		&:focus
			outline 0px !important
			-webkit-appearance none
		&:hover>span>small
			background rgba(grey800,0.1)
			transform scale(10)

.control-input
	margin-bottom 30px
	position relative
	
label
	position absolute
	color grey500
	top 15%
	left 0
	pointer-events none
	transition all .4s ease-in-out
	
input
	width 100%
	display block
	border none
	appearance none
	border-radius 2px
	border-bottom 1px solid grey300
	transition all .4s ease-in-out
	&:focus
		outline  none
		appearance none
		border-color amber500
	&:focus,
	&:hover,
	&:valid ~ label
		top -15px
		font-size 12px

.titulo-especial
	text-shadow shadow1
	margin 0px auto
	margin-bottom 80px
	padding 0px
	
.contenedor-center
	margin 0px auto
	width 80%
	padding 0px
	font-size 16px
	display block
	
logo
	font-family lobster
	margin 0px auto
	padding 0px
					
logo-shadow
	font-family lobster
	text-shadow shadow1
	margin 0px auto
	padding 0px
a
	-webkit-appearance none
	text-decoration none
	color inherit

ul
	margin 0 auto
	padding 0
	text-align center
	width 100%
	li
		list-style none
		// overflow hidden
		position relative
		a
			color rgba(white,0.5)
			transition color .4s linear
			&:hover
				color white
			// span
			// 	small
			// 		background rgba(grey500,0.1)
			// 		width 20px
			// 		height 20px
			// 		border-radius 50%
			// 		position absolute
			// 		margin-left auto
			// 		margin-right auto
			// 		left 0
			// 		right 0
			// 		transition all 0.4s linear
			// 		transform scale(0)
			&:active,
			&:focus
				outline 0px !important
				-webkit-appearance none
			&:hover>span>small
				background rgba(grey500,0.1)
				transform scale(10)

h1,h2,h3,h4,h5
	font-weight bold
	padding 0px
	margin 0px
	position relative
	small
		text-shadow none
		color grey800
		font-style oblique
		font-family sanspro
		font-size .15em
		position absolute
		bottom 0
		left 0
h1
	font-family lobster
	font-size 7em

h2
	font-family lobster
	font-size 5em
	
//Animaciones
@-webkit-keyframes logoAnimation {
	0%		{color:white;border: 1px solid white;}
	25% 	{color:red400;border: 1px solid red400;}
	50%		{color:amber500;border: 1px solid amber500;}
	100%	{color:cyan;border: 1px solid cyan;}
}